    </head>

    <body id="page-top">

        <%- include('../includes/drawer.ejs') %>

            <div class="container-fluid">

                <% if(table && role.length> 0) {%>

                <div class="row mb-2 mx-2 mt-2">
                    <div class="col-md-12">
                        <div class="card shadow mb-4">
                            <div class="table-responsive">
                                <div class="table-wrapper">

                                    <div class="table-title">
                                        <div class="row">
                                            <div class="col-md-6 col-sm-12">
                                                <h2 class="m-0 font-weight-bold text-primary">Company's
                                                    <b>Jobs</b>
                                                </h2>
                                            </div>

                                        </div>
                                    </div>

                                    <table class="table table-striped table-hover table-bordered">
                                        <thead>
                                            <tr>
                                                <th scope="col">#</th>
                                                <th scope="col">Blog Title</th>
                                                <th scope="col">Description</th>
                                                <th scope="col">action</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            <tr>
                                                <th scope="row" style="width: 10%;">
                                                </th>
                                                <td style="width: 20%;">
                                                </td>
                                                <td style="width: 20%;">
                                                </td>
                                                <td style="width: 10%;">

                                                    <a href="/company/roleID/<%= src.id %>/?view=true&name=<%= company.dataValues.company_name %>&id=<%= companyId%>"
                                                        class="edit" title="View" data-toggle="tooltip"><i
                                                            class="fas fa-fw fa-eye"></i></a>

                                                    <a href="/company/roleID/<%= src.id %>/?edit=true&name=<%= company.dataValues.company_name %>&id=<%= companyId%>"
                                                        class="edit" title="Edit" data-toggle="tooltip"><i
                                                            class="fas fa-fw fa-pen"></i></a>

                                                    <a href="/company/roleID/<%= src.id %>/?delete=true&name=<%= company.dataValues.company_name %>&id=<%= companyId%>"
                                                        class="edit" title="Delete" data-toggle="tooltip"><i
                                                            class="fas fa-fw fa-trash"></i></a>
                                                </td>

                                            </tr>
                                        </tbody>
                                    </table>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <% } %>


                <% if(action) {%>
                                
                        <div class="card-header">
                            <h3 class="m-0 font-weight-bold text-primary">Contact-Us
                            </h3>
                        </div>
                
                        <div class="card-body ">
                            <div class="row ">
                                <div class="col-md-6 col-sm-12 ">
                                    <div class="form-group ">
                                        <label>Name</label>
                                        <input type="text" class="form-control" placeholder="Name" disabled>
                                    </div>
                                </div>
                
                                <div class="col-md-6 col-sm-12 ">
                                    <div class="form-group ">
                                        <label>Email</label>
                                        <input type="text" class="form-control" placeholder="email" disabled>
                                    </div>
                                </div>
                
                            </div>

                            <div class="row ">
                                <div class="col-md-12 col-sm-12 ">
                                    <div class="form-group ">
                                        <label>Subject</label>
                                        <input type="text" class="form-control" placeholder="Subject" disabled>
                                    </div>
                                </div>
                            
                            </div>

                            <div class="row ">
                                <div class="col-md-12 ">
                                    <div class="form-group">
                                        <label for="comment">Notes</label>
                                        <textarea class="form-control" rows="3" disabled style="resize: none;"></textarea>
                                    </div>
                                </div>
                            </div>
                
                
                
                        </div>
                
                
                    <% } %>

            </div>

