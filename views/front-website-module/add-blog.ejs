    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>
    <script src='/js/registration.js'></script>

    <script>
        var loadFile = function (event) {
                var image = document.getElementById('previewImg');
                image.src = URL.createObjectURL(event.target.files[0]);
            };
    </script>

    </head>

    <body id="page-top">

        <%- include('../includes/drawer.ejs') %>

            <div class="container-fluid">

                <% if(form) {%>

                    <div class="row mb-2 mx-2 mt-2 col-md-12">

                        <form action="/extra/company/job-info" method="POST">

                            <div class="card shadow mb-4">

                            <div class="card-header">
                                <h3 class="m-0 font-weight-bold text-primary">Blog
                                </h3>
                            </div>

                            <div class="card-body ">
                                <div class="row">
                                    <div class="col-md-6 col-sm-12 mt-2">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group ">
                                                    <input type="text" class="form-control" placeholder="Title" required>
                                                </div>
                                            </div>
                                        </div>
                            
                            
                            
                                        <div class="row">
                                            <div class="col-md-12 ">
                                                <div class="form-group">
                                                    <textarea class="form-control" rows="10" placeholder="Content"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                            
                                    <div class="col-md-6 col-sm-12">
                                        <div class="row">
                                            <div class="form-group">
                                                
                                                    <div class="card mt-2">
                                                    <img class="img-fluid" src="/images/background.png" id="previewImg" alt="Card image cap" style="margin: 1rem;">
                                                </div>

                                                <div class="col-md-6 col-sm-12 mt-1">
                                                    <input type="file" class="form-control-file" id="fileUpload" onchange="loadFile(event)">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            
                            </div>

                            <div class="card-footer ">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <input type="submit" class="btn btn-primary" id="submit" value="Submit">
                            </div>
                            </div>
                        </form>


                    </div>

                    <% } %>

                        <% if(table && role.length> 0) {%>

                            <div class="row mb-2 mx-2 mt-2">
                                <div class="col-md-12">
                                    <div class="card shadow mb-4">
                                        <div class="table-responsive">
                                            <div class="table-wrapper">

                                                <div class="table-title">
                                                    <div class="row">
                                                        <div class="col-md-6 col-sm-12">
                                                            <h2 class="m-0 font-weight-bold text-primary">Company's
                                                                <b>Jobs</b>
                                                            </h2>
                                                        </div>

                                                    </div>
                                                </div>

                                                <table class="table table-striped table-hover table-bordered">
                                                    <thead>
                                                        <tr>
                                                            <th scope="col">#</th>
                                                            <th scope="col">Blog Title</th>
                                                            <th scope="col">Description</th>
                                                            <th scope="col">action</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>

                                                        <tr>
                                                            <th scope="row" style="width: 10%;">
                                                            </th>
                                                            <td style="width: 20%;">
                                                            </td>
                                                            <td style="width: 20%;">
                                                            </td>
                                                            <td style="width: 10%;">

                                                                <a href="/company/roleID/<%= src.id %>/?view=true&name=<%= company.dataValues.company_name %>&id=<%= companyId%>"
                                                                    class="edit" title="View" data-toggle="tooltip"><i
                                                                        class="fas fa-fw fa-eye"></i></a>

                                                                <a href="/company/roleID/<%= src.id %>/?edit=true&name=<%= company.dataValues.company_name %>&id=<%= companyId%>"
                                                                    class="edit" title="Edit" data-toggle="tooltip"><i
                                                                        class="fas fa-fw fa-pen"></i></a>

                                                                <a href="/company/roleID/<%= src.id %>/?delete=true&name=<%= company.dataValues.company_name %>&id=<%= companyId%>"
                                                                    class="edit" title="Delete" data-toggle="tooltip"><i
                                                                        class="fas fa-fw fa-trash"></i></a>
                                                            </td>

                                                        </tr>
                                                    </tbody>
                                                </table>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% } %>



                                <% if(action) {%>

                                    <div class="row mb-2 mx-2 mt-2 col-md-12">

                                        <form action="/extra/company/job-info" method="POST">

                                            <div class="card-header">
                                                <h3 class="m-0 font-weight-bold text-primary">Job Information
                                                </h3>
                                            </div>

                                            <div class="card-body ">
                                                <div class="row ">
                                                    <div class="col-md-12 ">
                                                        <div class="form-group ">
                                                            <label>Blog Title</label>
                                                            <input type="text" class="form-control" placeholder="Title"
                                                                required>
                                                        </div>
                                                    </div>

                                                </div>

                                                <div class="row ">
                                                    <div class="col-md-12 ">
                                                        <div class="form-group">
                                                            <label for="comment">Blog</label>
                                                            <textarea class="form-control"
                                                                style="resize: none;"></textarea>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="form-group">
                                                    <div class="col-md-6 col-sm-12">
                                                        <label for="fileUpload">Blog Image</label>
                                                        <input type="file" class="form-control-file" id="fileUpload">
                                                    </div>
                                                    <div class="col-md-6 col-sm-12 card" style="width: 18rem;">
                                                        <img class="card-img-top" src="..." id="previewImg" alt="Card image cap">
                                                        <label for="fileUpload">Image Preview</label>
                                                    </div>
                                                </div>

                                            </div>

                                            <div class="card-footer ">
                                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                <input type="submit" class="btn btn-primary" id="submit" value="Submit">
                                            </div>
                                        </form>


                                    </div>

                                    <% } %>

            </div>

            <%- include('../includes/end2.ejs') %>