<%- include('../includes/head.ejs') %>
    <link href="/css/company.css" rel="stylesheet" type="text/css">
    </head>

    <body id="page-top">

        <%- include('../includes/drawer.ejs') %>

            <a class="float-right shadow p-3 mb-2 bg-white rounded" href="#page-bottom">
                <i class="fas fa-angle-down"></i>
            </a>

            <div class="container-fluid">
                <div class="row mb-4">
                    <div class="col-md-12">
                        <div class="card shadow mb-4">
                            <div class="table-responsive">
                                <div class="table-wrapper">

                                    <div class="table-title">
                                        <div class="row">
                                            <div class="col-md-6 col-sm-12">
                                                <h2 class="m-0 font-weight-bold text-primary">
                                                    Institute
                                                    <b>Details</b>
                                                </h2>
                                            </div>

                                        </div>
                                    </div>

                                    <table class="table table-striped table-bordered table-sm" cellspacing="0"
                                        width="100%" id="dtHorizontalExample" style="margin-right: 10px;">
                                        <thead>
                                            <tr>
                                                <th scope="col">#</th>
                                                <th scope="col">Institute Name</th>
                                                <th scope="col">City</th>
                                                <th scope="col">Timing</th>
                                                <th scope="col">Strength</th>
                                                <th scope="col">POC Name</th>
                                                <th scope="col">Designation</th>
                                                <th scope="col">Email</th>
                                                <th scope="col">Mobile</th>
                                                <th scope="col">Type(Degree)</th>
                                                <th scope="col">Internship</th>
                                                <th scope="col">CRT</th>
                                                <th scope="col">Drive Report</th>
                                                <th scope="col">Institute Status</th>
                                                <th scope="col">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if(institute.length> 0 ) {%>
                                                <% let i=1; for (let src of institute) { %>
                                                    <tr>
                                                        <th scope="row">
                                                            <%=i%>
                                                        </th>
                                                        <td>
                                                            <%=src.instituteName ? src.instituteName: "" %>
                                                        </td>

                                                        <td>
                                                            <%=src.city ? src.city: "" %>
                                                        </td>
                                                        <td>
                                                            <%=src.timing ? src.timing: "" %>
                                                        </td>
                                                        <td>
                                                            <%=src.strength ? src.strength: "" %>
                                                        </td>
                                                        <td>
                                                            <%=src.pocName ? src.pocName: "" %>
                                                        </td>
                                                        <td>
                                                            <%=src.designation ? src.designation: "" %>
                                                        </td>
                                                        <td>
                                                            <%=src.email ? src.email: "" %>
                                                        </td>
                                                        <td>
                                                            <%=src.mobile ? src.mobile: "" %>
                                                        </td>
                                                        <td>
                                                            <%=src.degree ? src.degree: "" %>
                                                        </td>
                                                        <td>
                                                            <%=src.internship ? src.internship : "" %>
                                                        </td>

                                                        <td>
                                                            <%=src.crt ? src.crt: "" %>
                                                        </td>
                                                        <td>
                                                            <%=src.driveReport ? src.driveReport: "" %>
                                                        </td>

                                                        <td>
                                                            <%=src.instituteStatus ? src.instituteStatus : "" %>
                                                        </td>

                                                        <td>

                                                            <a href="/institute/_detail/<%= src.id %>/?view=true"
                                                                class="edit" title="View" data-toggle="tooltip"><i
                                                                    class="fas fa-fw fa-eye"></i></a>

                                                            <a href="/institute/_detail/<%= src.id %>/?edit=true"
                                                                class="edit" title="Edit" data-toggle="tooltip"><i
                                                                    class="fas fa-fw fa-pen"></i></a>
                                                            <a href="/institute/_detail/<%= src.id %>/?delete=true"
                                                                class="edit" title="Delete" data-toggle="tooltip"><i
                                                                    class="fas fa-fw fa-trash"></i></a>

                                                        </td>



                                                    </tr>
                                                    <% i++; } %>
                                                        <%} %>
                                        </tbody>
                                    </table>
                                    <div class="clearfix">
                                        <div class="hint-text">Showing
                                            <b>
                                                <%= showingItem%>
                                            </b> out of
                                            <b>
                                                <%= totalInstitute%>
                                            </b>
                                            entries
                                        </div>
                                        <ul class="pagination">
                                            <% if( currentPage !==1 && previousPage !==1) {%>
                                                <li class="page-item"><a href="?page=1"><i
                                                            class="fa fa-angle-double-left"></i></a>
                                                </li>
                                                <% } else { %>
                                                    <li class="page-item disabled"><a href="#"><i
                                                                class="fa fa-angle-double-left"></i></a>
                                                    </li>
                                                    <% } %>

                                                        <% if(hasPreviousPage) {%>
                                                            <li class="page-item">
                                                                <a href="?page=<%= previousPage %>" class="page-link">
                                                                    <%= previousPage %>
                                                                </a>
                                                            </li>
                                                            <% } %>
                                                                <li class="page-item active">
                                                                    <a href="?page=<%= currentPage %>"
                                                                        class="page-link">
                                                                        <%= currentPage %>
                                                                    </a>
                                                                </li>
                                                                <% if(hasNextPage) {%>
                                                                    <li class="page-item">
                                                                        <a href="?page=<%= nextPage %>"
                                                                            class="page-link">
                                                                            <%= nextPage %>
                                                                        </a>
                                                                    </li>
                                                                    <% } %>

                                                                        <% if(lastPage !==0 && lastPage !==currentPage
                                                                            && nextPage !==lastPage) {
                                                                            console.log(lastPage, currentPage, nextPage)
                                                                            %>
                                                                            <li class="page-item"><a
                                                                                    href="?page=<%= lastPage %>"
                                                                                    class="page-link"><i
                                                                                        class="fa fa-angle-double-right"></i></a>
                                                                            </li>
                                                                            <% } else { console.log(lastPage,
                                                                                currentPage, nextPage) %>
                                                                                <li class="page-item disabled"><a
                                                                                        href="#" class="page-link"><i
                                                                                            class="fa fa-angle-double-right"></i></a>
                                                                                </li>
                                                                                <% } %>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <%- include('../includes/end.ejs') %>