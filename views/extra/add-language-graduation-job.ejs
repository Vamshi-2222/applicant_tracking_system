<%- include('../includes/head.ejs') %>

<body id="page-top">
  <%- include('../includes/drawer.ejs') %>

  <!-- Begin Page Content -->
  <div class="container-fluid">
    <div class="row" style="margin-bottom: 10px">
      <div class="col-md-6">
        <div class="card shadow mb-4" id="location">
          <div class="card-header">
            <h3 class="m-0 font-weight-bold text-primary">Location</h3>
          </div>
          <form role="form" action="/extra/add-location" method="POST">
            <div class="card-body">
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <input
                      type="text "
                      class="form-control"
                      required
                      name="nameState"
                      id="nameState"
                      placeholder="State "
                    />
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <input
                      type="text "
                      required
                      class="form-control"
                      name="nameCity"
                      id="nameCity"
                      placeholder="City "
                    />
                  </div>
                </div>
              </div>
            </div>
            <div class="card-footer">
              <button type="submit " class="btn btn-primary">Submit</button>
              <div>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
              </div>
            </div>
          </form>
        </div>
      </div>

      <div class="col-md-6">
        <div class="card shadow mb-4" id="Prefered_job">
          <div class="card-header">
            <h3 class="m-0 font-weight-bold text-primary">Prefered Job</h3>
          </div>
          <form role="form" action="/extra/add-prefered-job" method="POST">
            <div class="card-body">
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <input
                      type="text "
                      class="form-control"
                      id="jobTitle "
                      name="jobTitle"
                      placeholder="Job Title"
                    />
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <input
                      type="text "
                      class="form-control"
                      id="jobRole"
                      name="jobRole"
                      placeholder="Job Role"
                    />
                  </div>
                </div>
              </div>
            </div>
            <div class="card-footer">
              <button type="submit " class="btn btn-primary">Submit</button>
              <div>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>

    <div class="row" style="margin-bottom: 10px">
      <div class="col-md-6">
